{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/library/*": ["./library/*"],
      "@/components/*": ["./components/*"]
    }
  },
  "include": ["components", "library", "*.ts"],
  "exclude": ["node_modules"]
}
  